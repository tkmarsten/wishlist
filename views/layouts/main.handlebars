<html>

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wish List</title>
    <script
      src="https://kit.fontawesome.com/7be49024ef.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/tooltips.css" />
  </head>

  <body class="text-center">
    <nav class="navbar p-4 bg-light">
      <a href="/"><i
          id="homeBtn"
          aria-describedby="tooltip"
          class="fa-solid fa-house fa-2x"
        ></i>
        <div id="homeTooltip" role="tooltip">
          Home
          <div id="homeArrow" data-popper-arrow></div>
        </div>
      </a>
      <a href="/viewallusers"><i
          id="allBtn"
          aria-describedby="tooltip"
          class="fa-solid fa-users fa-2x"
        ></i><div id="allTooltip" role="tooltip">
          View All Users
          <div id="allArrow" data-popper-arrow></div>
        </div></a>
      <div class="btn-group">
        <a href="/profile"><i
            id="button"
            aria-describedby="tooltip"
            class="fa-solid fa-user fa-2x"
          ></i>
          <div id="tooltip" role="tooltip">View Profile
            <div id="arrow" data-popper-arrow></div></div>
        </a>
        <button
          type="button"
          class="btn dropdown-toggle"
          data-bs-toggle="dropdown"
          aria-expanded="false"
          id="logBtn"
          aria-describedby="tooltip"
        ><div id="logTooltip" role="tooltip">
            Login/Logout
            <div id="logArrow" data-popper-arrow></div>
          </div>
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu">
          {{#if loggedIn}}
            <li>
              <button
                class="dropdown-item"
                type="button"
                id="logoutBtn"
              >Logout</button>
            </li>
          {{else}}
            <li><a href="/login">Login</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <main>
      <div class="container my-4">
        {{{body}}}
      </div>
    </main>

    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="/js/tooltips.js"></script>
    <script src="/js/logout.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>

</html>